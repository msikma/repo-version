    "url": "git+https://github.com/msikma/repo-version.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.0.0",
    "jiti": "^2.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.1.3"
  },
  "dependencies": {
  }
